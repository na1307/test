<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <NoWarn>$(NoWarn);SA1307;SA1310</NoWarn>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    <RestoreLockedMode Condition="'$(ContinuousIntegrationBuild)' == 'true'">true</RestoreLockedMode>
    <UseWindowsForms>true</UseWindowsForms>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Platforms>x64;ARM64</Platforms>
    <RuntimeIdentifiers>win-x64;win-arm64</RuntimeIdentifiers>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <_SuppressWinFormsTrimError>true</_SuppressWinFormsTrimError>
  </PropertyGroup>
  <ItemGroup>
    <Using Include="System.Runtime.InteropServices" />
    <Using Include="System.Runtime.InteropServices.Marshalling" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Bluehill.Features" />
    <PackageReference Include="Bluehill.NativeCom" />
    <PackageReference Include="Bluehill.NativeCom.SourceGenerator">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="System.IO.Hashing" />
    <PackageReference Include="WinFormsComInterop" />
  </ItemGroup>
  <ItemGroup>
    <DirectPInvoke Include="nativebridge.dll" />
    <NativeLibrary Include="..\$(Platform)\Debug\NativeBridge.lib" />
  </ItemGroup>
  <ItemGroup>
    <TrimmerRootAssembly Include="SimpleHashTab" />
  </ItemGroup>
</Project>
