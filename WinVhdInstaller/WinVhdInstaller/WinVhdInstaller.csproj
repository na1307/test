<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <UseWPF>true</UseWPF>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <PublishSelfContained>true</PublishSelfContained>
  </PropertyGroup>
  <ItemGroup>
    <Using Include="Bluehill.Wpf" />
    <Using Include="Bluehill.Wpf.ErrDialog" Static="true" />
    <Using Include="System.IO" />
    <Using Include="System.Windows" />
    <Using Include="System.Windows.Controls" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Bluehill.Wpf" />
    <PackageReference Include="CommunityToolkit.Mvvm" />
    <PackageReference Include="Microsoft.Dism" />
    <PackageReference Include="Microsoft.Wim" />
  </ItemGroup>
</Project>
