<v:Screen xmlns="https://github.com/avaloniaui"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:v="using:SimpleMC.Views"
          xmlns:vm="clr-namespace:SimpleMC.ViewModels"
          mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
          x:Class="SimpleMC.Views.SettingsScreen" x:DataType="vm:SettingsScreenViewModel">
    <Design.DataContext>
        <vm:SettingsScreenViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <TextBlock>Theme</TextBlock>
            <ComboBox ItemsSource="{Binding Themes, Mode=OneTime}" SelectedItem="{Binding Theme}" />
            <TextBlock>Instances path</TextBlock>
            <TextBox Text="{Binding InstancesPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock>Offline account name</TextBlock>
            <TextBox Text="{Binding OfflineAccountName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button Command="{Binding SaveCommand}">Save</Button>
        </StackPanel>
    </ScrollViewer>
</v:Screen>