<v:Screen xmlns="https://github.com/avaloniaui"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
          xmlns:v="using:SimpleMC.Views"
          xmlns:vm="clr-namespace:SimpleMC.ViewModels"
          mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
          x:DataType="vm:AddInstanceScreenViewModel"
          x:Class="SimpleMC.Views.AddInstanceScreen">
    <Design.DataContext>
        <vm:AddInstanceScreenViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <TextBlock>Instance name</TextBlock>
            <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock>Version</TextBlock>
            <ComboBox ItemsSource="{Binding AvaliableVersions}" SelectedItem="{Binding Version, Mode=TwoWay}"></ComboBox>
            <Button Command="{Binding SaveCommand}">Save</Button>
        </StackPanel>
    </ScrollViewer>
</v:Screen>